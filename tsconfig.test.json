{
    "extends": "./tsconfig.base.json",
    "include": [
        "src/**/*.spec.ts",
        "src/testing/*.ts"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "noEmitOnError": true,
        "module": "CommonJS",
        "target": "ES2015",
        "paths": {
            "@testing": ["src/testing/index"],
            "@testing/*": ["src/testing/*"]
        }
    }
}
